<Window x:Class="BimJsonRevitImporters.UI.Views.MainImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BimJsonRevitImporters.UI.Views"
        mc:Ignorable="d"
        Title="BIMJSON Importer" Height="520" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top row: Load BIMJSON, Pick CAD -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Load BIMJSONâ€¦" Command="{Binding LoadBimJsonCommand}" Padding="10,4" Margin="0,0,8,0"/>
            <Button Content="Pick CAD" Command="{Binding PickCadCommand}" Padding="10,4" Margin="0,0,8,0"/>
            <Button Content="Refresh Revit data" Command="{Binding RefreshRevitDataCommand}" Padding="10,4"/>
        </StackPanel>

        <!-- Levels row -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Base Level:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Grid.Column="1" ItemsSource="{Binding Levels}" DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedBaseLevel}" Margin="0,0,16,0"/>
            <TextBlock Grid.Column="2" Text="Top Level:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Grid.Column="3" ItemsSource="{Binding Levels}" DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedTopLevel}"/>
        </Grid>

        <!-- Walls section -->
        <TextBlock Grid.Row="2" Text="Walls (thickness groups)" FontWeight="SemiBold" Margin="0,4,0,4"/>
        <DataGrid Grid.Row="3" ItemsSource="{Binding WallGroupRows}" AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,0,0,8"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Thickness (cm)" Binding="{Binding ThicknessCm, StringFormat=N1}" Width="100"/>
                <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="60"/>
                <DataGridComboBoxColumn Header="Wall Type" Width="*"
                                       SelectedItemBinding="{Binding SelectedWallType}"
                                       DisplayMemberPath="Name">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.WallTypes, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            <Setter Property="DisplayMemberPath" Value="Name"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding DataContext.WallTypes, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            <Setter Property="DisplayMemberPath" Value="Name"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom: Import button + status -->
        <StackPanel Grid.Row="4">
            <Button Content="Import Walls" Command="{Binding ImportWallsCommand}" Padding="12,6" HorizontalAlignment="Left" Margin="0,0,0,8"/>
            <TextBlock Text="Report" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <ListBox ItemsSource="{Binding ReportLines}" MinHeight="80" MaxHeight="120" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
            <TextBlock Text="{Binding StatusText}" Margin="0,4,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
